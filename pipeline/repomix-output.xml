        run_logger.info(f"Feature schemas confirmed for {len(final_feature_schemas)} columns. "
                       f"User confirmed: {len(user_confirmed_schemas)}, "
                       f"System defaulted: {len(final_feature_schemas) - len(user_confirmed_schemas)}")
        
