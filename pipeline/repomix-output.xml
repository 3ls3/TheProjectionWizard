    """
    if logger is None:
        logger = logging.getLogger(__name__)
    
    try:
        # Take a small sample for testing
        test_sample = X_data_sample.head(min(5, len(X_data_sample)))
        
        if task_type == "classification":
            # Test the prediction function that will be used by SHAP
